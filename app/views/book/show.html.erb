<%if !flash[:notice].blank? %>
<div align="center" class="flash" >
	<%=flash[:notice]%>
</div>
<%end%>
<%=render(:partial=>'shared/header_of_details',:locals=>{:object => @user } ) %>

<div align="center" class="book">
    	
<h2>Book details</h2>
<%m=@book %>
<table border="o" >
	<tr height="50">
		<td><%= link_to("back to list...",{:action=>'list'} ) %></td>
		<td></td>
	</tr>
	<tr>
		<td width="100"></td>
		<td width="200"></td>
	</tr>
	<tr>
		<td><b>Name</b></td>
		<td><%= m.name  %></td>
	</tr>
	<tr>
		<td><b>Gener</b></td>
		<td><%= m.gener %></td> 
	</tr>
	<tr  valign="top">
		<td ><b>Author</b></td>
		<td ><%= m.author %></td>
	</tr>
	<tr height="50" align="center"">
		<td><%= link_to("Edit",{:action=>'edit', :id => m.id } ) %></td>
		<td><%= link_to("Delete",{:action=>'delete', :id => m.id } ) %></td>
	</tr>
</table>

</div>